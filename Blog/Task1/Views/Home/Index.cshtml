@{
    ViewBag.Title = "Главная";
}
@model List<BlogDatabase.Articles>
@* TODO Возможность создания статьи*@

<div class="row">
    <div style="width:80%">
        @foreach (var item in Model)
        {
        <div class="card m-5">
            <div class="card-body alert-danger">
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text">@item.Theme</p><br />
                <p class="card-text">@item.Date</p><br />
                <br />
                <div style="width:auto;height:20vh;">
                    <p>
                        @item.Text
                    </p><br />
                    <p class="card-text"><span>@item.Creator</span></p>
                </div>
            </div>
            <ul class="nav ">
                <li class="nav-item">
                    @Html.ActionLink("Create New", "CreateNewArticle")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Edit", "EditArticle", new { id = item.Id })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Delete","DeleteArticle",new {id = item.Id})
                </li>
            </ul>
        </div>
            
        }

    </div>
    <div style="width:20%">@Html.Partial("Menu")</div>
</div>