@{
    ViewBag.Title = "Главная";
}
@model List<BlogDatabase.Articles>

<div class="row">
    <div style="width:80%">
        @foreach (var item in Model)
        {
        <div class="card m-5 img-rounded bg-light" >
            <div class="card-body bg-dark text-white" style="border-radius: 5px 5px 0 0">
                <h2 class="card-title alert-info">@item.Name</h2>
                <p class="card-text ml-5">@item.Date</p>
                <h4 class="card-text ml-5">@item.Creator</h4>
                <div class="alert-info rounded" style="width:auto;height:auto;">
                    <p style="text-indent:20px">
                        @item.Text.Substring(0, (item.Text.Length >= 200) ? 200 : item.Text.Length) ...
                    </p>

                </div>
            </div>

             <ul class="nav alert-link">
                 <li class="nav-item">
                     @Html.ActionLink("More Details", "FullArticleView", new { id = item.Id })
                 </li>
             </ul>
        </div>

        }

    </div>
    <div class="text-left" style="width:20%">
        @Html.Partial("Menu")
        <br />
        @Html.Partial("Vote", ViewBag.Vote as Task1.Models.Voting)
    </div>
</div>